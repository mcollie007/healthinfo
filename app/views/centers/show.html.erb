<div class="main" data-page-id="show" >
<div class="container">
	<div class="row">
		
		<div class="col-xs-10 col-md-10 col-md-offset-1">
			<div class="center-map">
				
				<div class="container-fluid" id="map" data-center-id="<%= @center.id %>">
        			
      			</div>
			</div>
		</div>

	</div>
	<div class="row">
		<div class="col-xs-10 col-md-10 col-md-offset-1">
				
			<div class="center-info">
				<h4><%= @center.site_name %></h4>
				<p><% if @center.website == "unkn" || @center.website == "" || @center.website == nil || @center.website == "na" %>
					   Website Unavailable 
					<% else %>
					  <%= link_to @center.website, "http://#{@center.website}" %>
					<% end %></p>
				<div class="col-xs-4">
				<p style="margin-left:-15px;"><strong style="display:block;">Contact</strong>
					<em>Phone:</em> <%= @center.phone_number ? "#{@center.phone_number}" : "Not Available"%><br>
					<em>Fax:</em> <%= @center.fax_number ? "#{@center.fax_number}" : "Not Available"%><br>
					<em>Admin #:</em> <%= @center.admin_number ? "#{@center.admin_number}" : "Not Available" %><br>
					 
					</p></div>
					<div class="col-xs-4">
					<p><strong style="display:block;">Address</strong>
					<%= @center.address %><br>
					<%= @center.city %>,
					<%= @center.state %>,
					<%= @center.zip_code %> </br> <%= @center.full_county_name %></p>
					</div>
					<div class="col-xs-4">
					<p><strong style="display:block;">Status</strong>
					<em>Site Status: </em><%= @center.site_status %> <br>
					<em>Location Type: </em><%= @center.location_type_desc %> <br>
					<em>Clinic Type: </em><%= @center.center_type_desc %> <br>
					<em>Clinic Access: </em><%= @center.op_schedule_desc %>, </em><%= @center.op_calendar %></p>
					</div>
			</div>
		</div>
		
	</div>
</div>
</div>

<%= render 'layouts/footer' %>